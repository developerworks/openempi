<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
	default-lazy-init="true">

	<bean id="basicBlockingLoaderHp" class="org.openhie.openempi.blocking.basicblockinghp.BasicBlockingConfigurationLoader">
	</bean>

	<bean id="blockingServiceHp" class="org.openhie.openempi.blocking.basicblockinghp.BlockingServiceImpl">
		<property name="blockingDao" ref="blockingHpDao" />
		<property name="blockingServiceCache" ref="blockingServiceCache"/>
	</bean>
   
   <bean id="blockingServiceCache"
   		class="org.openhie.openempi.blocking.basicblockinghp.cache.BlockingServiceCache">
   		<property name="blockingDao" ref="blockingHpDao" />
		<property name="cacheManager" ref="cacheManager" />
		<property name="cacheTaskExecutor" ref="cacheTaskExecutor" />
   </bean>
   
    <bean id="blockingHpDao" class="org.openhie.openempi.blocking.basicblockinghp.dao.hibernate.BlockingDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
        <property name="configLocation" value="file:///${OPENEMPI_HOME}/conf/openempiCache.xml"/>
        <property name="shared" value="true"/>
    </bean>

	<bean id="cacheTaskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="corePoolSize" value="2" />
		<property name="maxPoolSize" value="10" />
		<property name="queueCapacity" value="1" />
		<property name="rejectedExecutionHandler" ref="generalCallerRunsPolicy"/>
	</bean>

	<bean id="generalCallerRunsPolicy" class="java.util.concurrent.ThreadPoolExecutor$CallerRunsPolicy" /> 
     
</beans>
